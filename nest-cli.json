{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/api",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
		"tsConfigPath": "src/api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "src/api",
  "projects": {
		"api": {
			"type": "application",
			"root": "src/api",
			"entryFile": "main",
			"sourceRoot": "src/api",
			"compilerOptions": {
				"tsConfigPath": "src/api/tsconfig.app.json",
				"plugins": [
					{
						"name": "@nestjs/swagger",
						"options": {
							"introspectComments": true
						}
					}
				]
			}
		},
    "shared": {
			"type": "library",
			"root": "src/shared",
			"entryFile": "index",
			"sourceRoot": "src/shared",
			"compilerOptions": {
				"tsConfigPath": "src/shared/tsconfig.lib.json"
			}
		}
  }
}
